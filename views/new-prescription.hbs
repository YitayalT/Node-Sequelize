<div class="page">
   {{> header}}
   {{> pharma-sidebar}}
<div class="content" style="padding-top:50px ; font-family: 'Times New Roman', Times, serif;">
    <div class="container-fluid p-5 mt-2" style="min-height: 560px;" >
       <div class="col-md-12" style="margin-bottom:10px ; border-bottom: 1px solid rgb(41, 197, 158); mar">
          <div class="row">
           <div class="col-6">
           <nav class="navbar">
            <div class="container-fluid mt-3">
                <form class="d-flex" action= '/searchPrescription' method="post">
                    <input class="form-control shadow-none me-2" name="mrn" type="text" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success mx-3" type="submit">Search</button>
                </form>
            </div>
        </nav>
        </div>
        <div class="col-6">
          <nav class="navbar">
          <div class="container-fluid mt-3">
          <form class="d-flex" action= '/prescriptionReport' method="post">
          <input class="form-control shadow-none me-2" name="mrn" type="text" placeholder="MRN for report" aria-label="Search">       
            <button class="btn btn-outline-success mx-3" type="submit">GenerateReport</button>
            
          </form>
          </div>
          </nav>
        </div>
        </div>
      </div>
       {{> info}}
        <h1 class="p-2" style="text-align: center ; color: rgb(41, 197, 158);">Prescription</h1>
        <div class="row" style="margin-bottom: 5px;">
             
             {{#each result}}
             <div class="col-3"></div>
              <div class="col-6" style="border: 1px solid rgb(41, 197, 158);; margin-bottom: 5px;">
                <table class="table  table-borderless table-sm">
                  <thead>
                   <th colspan="2"> FHCSH Prescription form</th>  
                  </thead>
                  <tbody>
                   <tr>
                    <td>MRN:</td>
                     <td style="border-bottom:1px solid rgb(11, 4, 4) ;"> {{MRN}}</td>
                   </tr>
                   <tr>
                    <td>Client fullName:</td>
                    <td style="border-bottom:1px solid rgb(0, 0, 0) ;">{{'client.first_name'}} {{'client.lats_name'}} {{'client.Grand_Father_name'}}</td>
                   </tr>
                   <tr>
                    <td>User Id:</td>
                     <td style="border-bottom:1px solid rgb(11, 4, 4) ;"> {{UserId}}</td>
                   </tr>
                    <tr>
                   <td>prescription date:</td>
                   <td style="border-bottom:1px solid rgb(11, 4, 4) ;">{{Date}}</td>
                   </tr>
                   <tr>
                     <td>DrugName:</td>
                     <td style="border-bottom:1px solid rgb(11, 4, 4) ;">{{DrugName}}</td>
                   </tr>
                   <tr>
                    <td>Dosage:</td>
                    <td style="border-bottom:1px solid rgb(11, 4, 4) ;">{{Dosage}}</td>
                   </tr>
                   <tr>
                    <td>RouteTaken:</td>
                    <td style="border-bottom:1px solid rgb(11, 4, 4) ;">{{RouteTaken}}</td>
                   </tr>
                   <tr>
                    <td>Frequency:</td>
                    <td style="border-bottom:1px solid rgb(11, 4, 4) ;">{{Frequency}}</td>                 
                   </tr>

                   <tr>
                    <td>AmountDispensed:</td>
                    <td style="border-bottom:1px solid rgb(11, 4, 4) ;">{{AmountDispensed}}</td>                 
                   </tr>
                   
                     
                  <td>Physician role:</td>
                  <td style="border-bottom:1px solid rgb(11, 4, 4) ;">{{'user.role'}}</td>
                  </tr>
                  <tr>
                    <td>Physician Name:</td>
                     <td style="border-bottom:1px solid rgb(11, 4, 4) ;"> {{'user.first_name'}} {{'user.last_name'}}</td>
                   </tr> 
                   

                  
                  
                  </tbody>
                </table>
              </div>
              <div class="col-3"></div>
           {{ else}}
                  <p style="">No data is available</p>
                {{/each}}
       </div>
      </div> 
      {{> footer}}
      {{> copy}} 
</div>

</div>
