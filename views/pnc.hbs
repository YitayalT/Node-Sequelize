   {{> header}}
<div class="page">
    {{> pnc-sidebar}}
    <div class="content" style="padding-top:50px ; font-family: 'Times New Roman', Times, serif;">
        <div class="container-fluid p-5 my-5">
                <form action="/addPnc" method="post">
                <h3 class="p-2" style="text-align: center ; color: rgb(41, 197, 158);">Pnc Visit</h3>
                  {{> info}}
                  {{> error}}
                <div class="row">
                    <div class="col">
                        <table class="table table-borderless table-sm">
                            <thead>
                                <tr>
                                    <th colspan="2">PNC Followup</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>MRN</td>
                                    <td><input class="form-control shadow-none" type="text" id="mrn" name="mrn" required></td>
                                </tr>
                                <tr>  
                                    <td>UserId</td>
                                    <td><input class="form-control shadow-none" type="text" name="uid" id="uid" required></td>
                                </tr>
                                    <td>Date of Visit</td>
                                    <td><input class="form-control shadow-none" type="date" name="visit_date" id="visit_date" required></td>    
                                </tr>
                                <tr>
                                    <td>Blood pressure</td>
                                    <td><input class="form-control shadow-none" type="text" id="bp" name="bp" required></td>
                                </tr>
                                <tr>
                                    <td>Temprature</td>
                                    <td><input class="form-control shadow-none" type="text" id="temp" name="temp" required></td>
                                </tr>
                                <tr>
                                    <td>look for pph</td>
                                    <td><input class="form-control shadow-none" type="text" id="pph" name="pph" required></td>
                                </tr>
                                <tr>
                                   <td>Dribbling</td>
                                    <td><input class="form-control shadow-none" type="text" name="dribbling" id="dribbling" required></td>
                                </tr>
                                <tr>
                                    <td>Anemia</td>
                                    <td><input class="form-control shadow-none" type="text" name="anemia" id="anemia" required></td>
                                 </tr>
                                 <tr>   
                                    <td>Vaginal Discharge</td>
                                    <td><input class="form-control shadow-none" type="text" name="VaginalDischarge" id="VaginalDischarge" required></td>
                                </tr>
                                <tr>
                                    <td>pelvic Exam</td>
                                    <td><input class="form-control shadow-none" type="text" name="pelvicExam" id="pelvicExam" required></td>
                               </tr>

                             <tr>
                                    <td>Breast</td>
                                   <td><input class="form-control shadow-none" type="text" name="breast" id="breast" required></td>
                                </tr>
                            </tbody>
                         </table>
                      
                    </div>   
                    <div class="col">
                           <table class="table table-borderless table-sm">
                            <thead>
                                <tr>
                                    <th>pnc follow up</th>
                                </tr>
                            </thead>
                            <tbody>                               
                                
                                <tr>
                                    <td>VitaminA</td>
                                    <td><input class="form-control shadow-none" type="text" name="VitaminA" id="VitaminA" required></td>
                                 </tr>
                                 <tr>
                                    <td>Baby Breathing</td>                                   
                                    <td><input class="form-control shadow-none" type="text" name="baby_breathing" id="baby_breathing" required></td>                               
                                </tr>
                                <tr>
                                    <td>Baby Breast Feeding</td>
                                    <td><input class="form-control shadow-none" type="text" name="baby_feeding" id="baby_feeding" required></td>
                                </tr>
                                <tr>
                                    <td>BabyWt</td>
                                    <td><input class="form-control shadow-none" type="text" name="BabyWt" id="BabyWt" required></td>                                   
                                </tr>
                                <tr>
                                    <td>Immunization</td>
                                   <td><input class="form-control shadow-none" type="text" name="Immunization" id="Immunization" required></td> 
                                  </tr>
                                  <tr>  
                              <td>HIV Tasted</td>                                   
                              <td>
                                <select class="custom-select shadow-none" name="HivTasted" id="HivTasted" required>
                                            <option value="No"> No</option>
                                            <option value="Yes">Yes</option> 
                                        </select>
                              </td> 
                             </tr>
                                <tr>
                                    <td>HIV Test Result</td>
                                    <td>
                                        <select class="custom-select shadow-none" name="hiv_result" id="hiv_result" required>
                                            <option value="Negative"> Negative</option>
                                            <option value="Positive">Positive A</option> 
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td>ARVPx For Mother</td>
                                    <td><input class="form-control shadow-none" type="text" name="ARVPxForMother" id="ARVPxForMother" required></td>
                                </tr>
                                <tr>
                                    <td>Visit</td>
                                    <td>
                                        <select class="custom-select shadow-none" name="visit" id="visit" required>
                                            <option value="1st" >1<sup>st</sup></option>
                                            <option value="2nd">2<sup>nd</sup></option>
                                            <option value="3rd">3<sup>rd</sup></option>
                                            
                                        </select>
                                    </td>
                                    </tr>
                                    <tr>
                                    <td>Next Appointment</td>
                                    <td><input class="form-control shadow-none" type="date" name="appointment" id="appointment" required></td>
                                 </tr>
                            
                            </tbody>
                        </table>
                    </div>                
                </div>
                
               <div class="row">
                <div class="col-5"></div>
                <div class="col-4">
                 <div class="d-flex m-4 gap-3">
            <button type="submit" class="btn btn-outline-primary btn-sm">Submit</button> &nbsp;&nbsp;
            <button type="reset" class="btn btn-outline-primary btn-sm">Reset</button>
               </div>
                </div>
               </div>
                </form>
        </div> 
         {{> footer}} 
         {{> copy}} 
    </div>    
</div>

