
     {{> header}}
     <div class="container-fluid p-5">
     <div class="container" style="padding:100px ; font-size: small; 'Times New Roman', Times, serif;">
    <div >
    <form id="form" class="row g-3" action="/login" method="POST">

    <div class="col-md-4 p-5">
    <img src="/image/book-img.svg" alt="image not found" srcset="">
    </div>
    <div></div>
    <div class="col-md-4 p-5">
      <div class="row">
           {{#if message }}
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>{{message}}!</strong> 
  <button type="button" id="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
    {{/if}}
      </div>
      <div class="form-group row input-control">
      <label for="uname" class="form-label">Username</label>
      <input type="text" class="form-control shadow-none" id="uname" name="uname"/>
       <small class="error text-danger">{{userName}}</small>
      </div>

       <div class="form-group row input-control">
     <label for="password" class="form-label">password</label>
     <input type="password" class="form-control shadow-none" id="password" name="password" />
      <small class="error text-danger">{{password}}</small>
      </div>
      <div class="form-group row input-control">
      <label for="role" class="form-label">Role</label>
      <select class="custom-select shadow-none" id="role" name="role" >
        <option value="doctor">Doctor</option>
        <option value="midwife">Midwife</option>
        <option value="receptionist">Receptionist</option>
        <option value="laboratory">laboratory</option>
        <option value="radiology">Radiologist</option>
        <option value="pharmacist">Pharmacist</option>
        <option value="hmis">HMIS officer</option>
        <option value="Admin">Admin</option>
      </select>
      <small class="error"></small>
      </div>
       <input type="submit"  value="Login" class="btn btn-outline-primary btn-sm" style="margin: auto ;"> 
    </div>
    <div class="col-md-4"></div>
   
    </form>
  </div>
</div>
</div>
{{> footer}}
{{> copy}} 