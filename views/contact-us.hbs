            <style>.gmap_canvas {overflow:hidden;background:none!important;height:500px;width:100%;}</style>
            </div>
            </div>
    </div>
    <div class="col-6 cop-ck">
      {{> info}}
      {{> error}}
      <form action="/contactUs" method="post">
      <h2>Contact Form</h2>
      <div class="row cf-ro">
        <div class="col-3"><label>Enter Name :</label></div>
        <div class="col-8">
          <input type="text" placeholder="Enter Name" name="name" class="form-control"/></div>
      </div>
      <div class="row cf-ro">
        <div class="col-3"><label>Email Address :</label></div>
        <div class="col-8"><input
            type="text"
            name="email"
            placeholder="Enter Email Address"
            class="form-control"
          /></div>
      </div>
      <div class="row cf-ro">
        <div class="col-3"><label>Mobile Number:</label></div>
        <div class="col-8">
          <input type="text" name="phone" placeholder="Enter Mobile Number" class="form-control"/></div>
      </div>
      <div class="row cf-ro">
        <div class="col-3"><label>Enter Message:</label></div>
        <div class="col-8">
          <textarea
            rows="5"
            placeholder="Enter Your Message"
            class="form-control"
            name="feedback"
          ></textarea>
        </div>
      </div>
      <div class="row cf-ro">
        <div class="col-sm-3"><label></label></div>
        <div class="col-sm-8">
          <input type="submit"  value="Submit feedback" class="btn btn-outline-primary btn-sm" style="margin: auto ;"> &nbsp;&nbsp;&nbsp;&nbsp;
          <input type="reset"  value="Reset" class="btn btn-outline-primary btn-sm" style="margin: auto ;"> 
        </div>
      </div>
      </form>
    </div>
  </div>
</section>
