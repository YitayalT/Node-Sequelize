 {{> header}}

 <div class="container-fluid"> 
    <div class="container" style="padding:100px ; font-family: 'Times New Roman', Times, serif;">
  <div class="col-md-12">
        <nav class="navbar">
            <div class="container-fluid mt-3">
                <form class="d-flex" role="search">
                    <input class="form-control shadow-none me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success mx-3" type="submit">Search</button>
                </form>
            </div>
        </nav>
    </div>
    <hr>
    <div class="tab-content" >

      <div class="tab-pane" id="add-client">
        <div class="container p-5"> 
          <h1>Registration</h1>
            <form id="form" class="row g-3" action="/add" method="POST">
                <!-- facility name field -->
                
                <div class="col-md-4">
                  <div class="input-control">
                    <label for="facility_name" class="form-label">Name of Facility</label>
                    <input type="text" class="form-control shadow-none" id="facility_name" name="facility_name" required>
                  <div class="error"></div>
                  </div>
                  </div>
                  <!-- mrn field -->
                  <div class="col-md-4">
                    <label for="mrn" class="form-label">Medical Record Number</label>
                    <input type="text" class="form-control shadow-none" id="mrn" name="mrn" required>
                 <div class="error"></div>
                  </div>
                 <!-- registration date field -->
                  <div class="col-md-4 input-control">
                    <label for="date_of_reg" class="form-label">Date of Registration</label>
                    <input type="date" class="form-control shadow-none" id="date_of_reg" name="date_of_reg" required>
                  <div class="error"></div>
                  </div>
                  <!-- first name field -->
                <div class="col-md-4">
                  <label for="fname" class="form-label">First name</label>
                  <input type="text" class="form-control shadow-none" id="fname" name="fname" required>
                </div>
                <!-- last name field -->
                <div class="col-md-4">
                  <label for="lname" class="form-label">Last name</label>
                  <input type="text" class="form-control shadow-none" id="lname" name="lname" required>
                </div>
                <!-- grand father name field -->
                <div class="col-md-4">
                  <label for="gfname" class="form-label">Grand Father Name</label>
                    <input type="text" class="form-control shadow-none" id="gfname" name="gfname" required>
                </div>
                <!-- age field -->
                <div class="col-md-4">
                  <label for="age" class="form-label">Age</label>
                  <input type="number" class="form-control shadow-none" id="age" name="age" required>
                </div>
                <!-- sex field -->
                <div class="col-md-4">
                    
                        <label for="gender" class="form-label">Sex</label>
                        <select class="custom-select shadow-none" id="gender" name="gender" required>
                          <option value="female" >Female</option>
                          <option value="male">Male</option>
                          
                        </select>
                </div>
                <!-- email field -->
                <div class="col-md-4">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control shadow-none" id="email" name="email">
                </div>
             <!-- phone field -->
                <div class="col-md-4">
                    <label for="phone" class="form-label">Phone No.</label>
                    <input type="tel" class="form-control shadow-none" id="phone" name="phone">
                  </div>
                <!-- region field -->
                  <div class="col-md-4">
                    <label for="region" class="form-label">Region</label>
                    <input type="text" class="form-control shadow-none" id="region" name="region">
                  </div>
                <!-- city field -->
                  <div class="col-md-4">
                    <label for="city" class="form-label">Woreda/SubCity</label>
                    <input type="text" class="form-control shadow-none" id="city" name="city" required>
                  </div>
              <!-- kebele field -->
                  <div class="col-md-4">
                    <label for="kebele" class="form-label">Kebele</label>
                    <input type="text" class="form-control shadow-none" id="kebele" name="kebele" required>
                  </div>
                   <div class="col-md-4">

                   </div>
                   <div class="col-md-4">

                   </div>
                   <div class="col-md-4">

                   </div>
                   <div class="col-md-4">
                   
                  <input type="submit" value="Add Client" class="btn btn-primary">
                   
                   </div>
              </form>
              <!-- form ends here-->
        </div>
      </div>

      <div class="tab-pane" id="client-list">

       <table class="table  table-striped table-bordered">
            <thead>
              <tr>
                <th scope="col">Facility Name</th>
                <th scope="col">Mrn</th>
                <th scope="col">Full Name</th>
                <th scope="col">Age</th>
                <th scope="col">Sex</th>
                <th scope="col">region</th>
                <th scope="col">woreda</th>
                <th scope="col">phone No</th>
                <th scope="col" colspan="2">options</th>
              </tr>
            </thead>
            <tbody>
                  {{#each result}}
              <tr>
                <td scope="row">{{name_of_facility}}</td>
                <td>{{MRN}}</td>
                <td>{{first_name}} {{lats_name}}</td>
                <td> {{Age}}</td>
                <td>{{Sex}}</td>
                <td>{{Region}}</td>
                <td>{{Kebele}}</td>
                <td>{{Phone_no}}</td>
                 <td> <a class ="btn btn-outline-success btn-sm" href="/edit/{{MRN}}">Modify</a> </td>
                <td> <a class ="btn btn-outline-danger btn-sm" href="#">Delete</a> </td>
              </tr>
              {{else}}
          <p>No gigs available</p>
          {{/each}} 
            </tbody>
          </table>
      </div>
      <div class="tab-pane" id="messages">
    <h3>Messages here</h3>
      </div>
     </div>
 </div>
 </div>

 {{> footer}}