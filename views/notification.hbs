 {{> header}}
 <div class="page">
    {{> sidebar }}
    <div class="content" style="padding-top:100px ; font-family: 'Times New Roman', Times, serif;">
        <div class="container-fluid" style="min-height: 560px;">
            {{> info}}
            {{> error }}
          <h1 class=" mt-3 p-5" style=" color: rgb(41, 197, 158);">Send SMS Notification</h1>
          <form action="/appointment" method="post">
            <div class="row">
          <div class="col-3">
      <label for="fname" class="form-label">First name</label>
      <input type="text" class="form-control shadow-none" id="fname" name="fname" required/>
          </div>
       <div class="col-3">
      <label for="message" class="form-label">Message</label>
      <input type="text" class="form-control shadow-none" id="message" name="message" required />
        </div>

    <div class="col-3">
      <label for="phone" class="form-label">Phone No.</label>
      <input type="tel" class="form-control shadow-none" id="phone" name="phone" required/>
    </div>
       <div class="col-3 mt-3">
      <label for="notify" class="form-label"></label>
       <input type="submit"  value="send notification" id="notify" class="btn btn-outline-primary btn-sm mt-4"> 
        </div>
    </div>
         </form>
     <hr style="background-color: rgb(9, 163, 161);">
      <form action="/searchAppointment" method="post">
        <div class="row">
          <div class="col-3">
            <label for="date" class="form-label">Today</label>
            <input type="date" class="form-control shadow-none" id="date" name="date" required/>
          </div>
           <div class="col-2 mt-3">
            
            <input type="submit" value="SeeValue" class="btn btn-outline-primary btn-sm mt-4">
          </div>
          <div class="col-3 mt-3">
            {{today}}
            </div>
          <div class="col-4 mt-4">
            <button type="button" class="btn btn-success position-relative">
            <i class="fas fa-users"></i> &nbsp;Clients having tomorrow appointment
           <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
           {{count}}  
           </span>
            </button>
          </div>
        </div>
      </form>
      <hr style="background-color: rgb(9, 163, 161);">
        <table class="table  table-striped table-bordered">
           <thead>
              <tr>
                <th scope="col">Mrn</th>
                <th scope="col">Full Name</th>
                <th scope="col">Appointment Date</th>
                <th scope="col">Age</th>
                <th scope="col">phone No</th>
              </tr>
            </thead>
            <tbody>
             {{#each user }}
              <tr>               
                <td>{{MRN}}</td>
                <td>{{'client.first_name'}} {{'client.lats_name'}}</td>
                <td> {{ Next_Appointment}}</td>
                <td>{{'client.Age'}}</td>             
                <td>{{'client.Phone_no'}}</td>             
              </tr>
              {{else}}
          <b><i><p style="color: red ; text-align: center; padding: 10px;">Such client has appointment! </p></i></b>
              {{/each}} 
            </tbody>
        </table>
         </div>
        {{> footer }}
        {{> copy }}
    </div>
 </div>