
       {{> header}}
 <div class="container mt-5">
        <div class="col-md-12">
        <nav class="navbar bg-light">
            <div class="container-fluid">
              {{#if result}}
                <form class="d-flex search-form" role="search" action="/search">
                    <input class="form-control me-2" type="search" placeholder="search by mrn" aria-label="Search">
