
<div class="page">
 {{> header}}
 {{> receptionist-sidebar}}
<div class="content" style="padding-top:100px ; font-size: medium; font-family: 'Times New Roman', Times, serif;">
 <div class="container-fluid mt-2" style="min-height:510px ;">
     <div class="col-md-12" style="margin-bottom:10px ;">
        <nav class="navbar">
            <div class="container-fluid mt-3">
                <form class="d-flex" action= '/search' method="post">
                    <input class="form-control shadow-none me-2" name="mrn" type="text" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success mx-3" type="submit">Search</button>
                </form>
            </div>
        </nav>
    </div>
    

    {{!-- <div class="container mt-5"> --}}
        <table class="table  table-striped table-bordered">
            <thead>
              <tr>
                <th scope="col">Facility Name</th>
                <th scope="col">Mrn</th>
                <th scope="col">Full Name</th>
                <th scope="col">Age</th>
                <th scope="col">Sex</th>
                <th scope="col">region</th>
                <th scope="col">woreda</th>
                <th scope="col">phone No</th>
                <th scope="col" colspan="2">options</th>
              </tr>
            </thead>
            <tbody>
                  {{#each result}}
              <tr>
                <th scope="row">{{name_of_facility}}</th>
                <td>{{MRN}}</td>
                <td>{{first_name}} {{lats_name}}</td>
                <td> {{Age}}</td>
                <td>{{Sex}}</td>
                <td>{{Region}}</td>
                <td>{{Kebele}}</td>
                <td>{{Phone_no}}</td>
                 <td> <a class ="btn btn-outline-success btn-sm" href="/edit/{{MRN}}">Modify</a> </td>
                <td> <a class ="btn btn-outline-danger btn-sm" href="#">Delete</a> </td>
              </tr>
              {{else}}
          <b><i><p style="color: red ; text-align: center; padding: 10px;">Such client is not found in the system! </p></i></b>
          {{/each}} 
            </tbody>
          </table>
    {{!-- </div> --}}
</div>
 </div>
  </div>
  {{> footer}}