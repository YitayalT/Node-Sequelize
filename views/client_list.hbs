  <div class="page">
 {{> header}}
 {{> receptionist-sidebar}}
<div class="content" style="padding:10px ; font-size: small; font-family: 'Times New Roman', Times, serif;">
 <div class="container-fluid mt-5">
     <div class="col-md-12">
        <nav class="navbar">
            <div class="container-fluid mt-3">
                <form class="d-flex" role="search">
                    <input class="form-control shadow-none me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success mx-3" type="submit">Search</button>
                </form>
            </div>
        </nav>
    </div>
    

    <div class="container mt-5">
        <table class="table  table-striped table-bordered">
            <thead>
              <tr>
                <th scope="col">Facility Name</th>
                <th scope="col">Mrn</th>
                <th scope="col">Full Name</th>
                <th scope="col">Age</th>
                <th scope="col">Sex</th>
                <th scope="col">region</th>
                <th scope="col">woreda</th>
                <th scope="col">phone No</th>
                <th scope="col" colspan="2">options</th>
              </tr>
            </thead>
            <tbody>
                  {{#each result}}
              <tr>
                <th scope="row">{{name_of_facility}}</th>
                <td>{{MRN}}</td>
                <td>{{first_name}} {{lats_name}}</td>
                <td> {{Age}}</td>
                <td>{{Sex}}</td>
                <td>{{Region}}</td>
                <td>{{Kebele}}</td>
                <td>{{Phone_no}}</td>
                 <td> <a class ="btn btn-outline-success btn-sm" href="/edit/{{MRN}}">Modify</a> </td>
                <td> <a class ="btn btn-outline-danger btn-sm" href="#">Delete</a> </td>
              </tr>
              {{else}}
          <p>No gigs available</p>
          {{/each}} 
            </tbody>
          </table>
    </div>
</div>
 </div>
