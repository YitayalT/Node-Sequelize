 {{> header}}
<div class="page">
   {{> sidebar}}
<div class="content" style="padding-top:50px ; font-family: 'Times New Roman', Times, serif;">
<div class="container-fluid p-5 m-2" style="min-height:520px;">
      <u style="color: rgb(41, 197, 158);"> <h1 class="p-2" style="text-align: center ; color: rgb(41, 197, 158);">Prescription</h1></u>
       {{> info}}  
       {{> error}}   
  <form id="form"  class="row g-2" action="/addPrescription" method="POST">        
        <div class="col-md-4">
        <label for="mrn" class="form-label">Medical Record Number</label>
        <input type="text" class="form-control shadow-none" id="mrn" name="mrn" required>        
        </div>
   {{!-- doctor id --}}
        
          {{#if userID }}
        {{!-- <label for="uid" class="form-label">User Id</label> --}}
        <input type="hidden" class="form-control shadow-none" id="uid" name="uid" value="{{userID}}" required>        
          {{ else }}
          <div class="col-md-4"></div>
       <label for="uid" class="form-label">User Id</label>
        <input type="text" class="form-control shadow-none" id="uid" name="uid" required>        
          </div>
          {{/if }}
         
        <div class="col-md-4">
        <label for="date" class="form-label">Prescription Date</label>
        <input type="date" class="form-control shadow-none" id="date" name="date" required>        
        </div>
        {{!-- drug name --}}
        <div class="col-md-4">
        <label for="drug_name" class="form-label">Drug Name</label>
        <input type="text" class="form-control shadow-none" id="drug_name" name="drug_name" required>        
        </div>
        {{!-- drug dosage --}}
        <div class="col-md-4">
        <label for="dosage" class="form-label">Dosage</label>
        <input type="text" class="form-control shadow-none" id="dosage" name="dosage" required>        
        </div>
        {{!-- route taken --}}
        <div class="col-md-4">
        <label for="route_taken" class="form-label">Route Taken</label>
        <input type="text" class="form-control shadow-none" id="route_taken" name="route_taken" required>        
        </div>
        {{!-- frequency --}}
        <div class="col-md-4">
        <label for="frequency" class="form-label">Frequency</label>
        <select class="custom-select shadow-none" id="frequency" name="frequency" required>
        <option value="qDay">qDay</option>
        <option value="BiD">BiD</option>
        <option value="TiD">TiD</option>
        <option value="QiD">QiD</option>
      </select>
        </div>
   {{!-- amount dispensed --}}
        <div class="col-md-4">
        <label for="amount" class="form-label">Amount Dispensed</label>
        <input type="text" class="form-control shadow-none" id="amount" name="amount" required>        
        </div>
         <div class="col-md-4"></div>
         <div class="col-md-4"></div>
        <div class="col-md-4 mt-5 ">
         <input type="submit"  value="Prescribe" class="btn btn-outline-primary btn-sm" style="margin: auto ;"> 
         <input type="reset"  value="Reset" class="btn btn-outline-primary btn-sm" style="margin: auto ;"> 
        </div>

       </form>
       
</div>
{{> footer}}
{{> copy}} 
</div> 
</div>

