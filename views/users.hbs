<div class="page">
    {{> admin-sidebar}}
    {{> header}}
<div class="content" style="padding-top:100px ; font-family: 'Times New Roman', Times, serif;"> 
 <div class="container-fluid" style="min-height:515px ;">

  <div class="col-md-12" style="margin-bottom:10px ;">
        <nav class="navbar">
            <div class="container-fluid mt-3">
                <form class="d-flex" role="search" action= "/userSearch" method="post">
                    <input class="form-control shadow-none me-2" type="search" name="users" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success mx-3" type="submit">Search</button>
                </form>
            </div>
        </nav>
    </div>

        <table class="table  table-striped table-bordered">
            <thead>
              <tr>
                
                <th scope="col">User id</th>
                <th scope="col">Full Name</th>
                <th scope="col">Age</th>
                <th scope="col">Sex</th>
                <th scope="col">user name</th>             
                <th scope="col">phone No</th>
                <th scope="col">department</th>               
                <th scope="col">role</th>
                <th scope="col" colspan="2">options</th>
              </tr>
            </thead>
            <tbody>

                {{#each user}}
              <tr>
                <th >{{user_id}}</th>
                <td>{{first_name}} {{last_name}}</td>
                <td> {{Age}}</td>
                <td>{{Sex}}</td>
                <td>{{user_name}}</td>               
                <td>{{Phone_no}}</td>
                <td>{{department}}</td>             
                <td>{{role}}</td>
                <td> <a class ="btn btn-outline-success btn-sm" href="#">Modify</a> </td>
                <td> <a class ="btn btn-outline-danger btn-sm" href='#'>Delete</a> </td>
              </tr>
         {{else}}
          <b><i><p style="color: red ; text-align: center; padding: 10px;">No such users registered in the system!</p></i></b>
          {{/each}}
            </tbody>
          </table>
 </div>
 {{> footer}}
</div>

</div>