<div class="page">
    {{> admin-sidebar}}
    {{> header}}
<div class="content" style="padding-top:100px ;  font-family: 'Times New Roman', Times, serif;"> 
 <div class="container-fluid" style="min-height: 500px;">

  <div class="col-md-12" style="margin-bottom:10px ;">
    <div class="row">
      <div class="col-8">
        <nav class="navbar">
            <div class="container-fluid mt-3">
                <form class="d-flex" role="search" action= "/userSearch" method="post">
                    <input class="form-control shadow-none me-2" type="search" name="users" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success mx-3" type="submit">Search</button>
                </form>
            </div>
        </nav>
      </div>
       {{#if count}}
        <div class="col-4">
          <nav class="navbar">
            <div class="container-fluid mt-3">
              <button type="button" class="btn btn-success position-relative">
           <i class="fas fa-users"></i> &nbsp;Total Health Workers
           <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
           {{count}}  
         </span>
            </button>
            </div>
             </nav>
        </div>
        {{/if }}
      </div>
    {{!-- </div> --}}
    </div>

        <table class="table  table-striped table-bordered">
            <thead>
              <tr>
                
                <th scope="col">User id</th>
                <th scope="col">Full Name</th>
                <th scope="col">Age</th>
                <th scope="col">Sex</th>
                <th scope="col">user name</th>             
                <th scope="col">phone No</th>
                <th scope="col">department</th>               
                <th scope="col">role</th>
                <th scope="col" colspan="2">Actions</th>
              </tr>
            </thead>
            <tbody>

                {{#each user}}
              <tr>
                <th >{{user_id}}</th>
                <td>{{first_name}} {{last_name}}</td>
                <td> {{Age}}</td>
                <td>{{Sex}}</td>
                <td>{{user_name}}</td>               
                <td>{{Phone_no}}</td>
                <td>{{department}}</td>             
                <td>{{role}}</td>
                <td> <a class ="btn btn-outline-success btn-sm" href="/editUser/{{user_id}}">Modify</a> </td>
                <td> <a class ="btn btn-outline-danger btn-sm" data-toggle="modal" data-target="#exampleModal">Delete</a> </td>
            
              <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-warning" id="exampleModalLabel">Notice!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure to remove the user?
      </div>
      <div class="modal-footer">
        <a type="btn" class="btn  btn-outline-secondary btn-sm" data-dismiss="modal">Cancel</a>
        <a class ="btn btn-outline-danger btn-sm" href="/deleteUser/{{user_id}}">Delete</a>
      </div>
    </div>
  </div>
</div>
              </tr>

         {{else}}
          <b><i><p style="color: red ; text-align: center; padding: 10px;">No such users registered in the system!</p></i></b>
          {{/each}}
            </tbody>
          </table>
 </div>
 {{> footer}}
 {{> copy}} 
</div>
</div>