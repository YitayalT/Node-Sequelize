
 {{> header}}
<div class="page">
 {{> receptionist-sidebar}}
<div class="content" style="padding-top:100px;font-family: 'Times New Roman', Times, serif;">
 <div class="container-fluid mt-2" style="min-height: 500px;">
     <div class="col-md-12" style="margin-bottom:10px ;">
        <nav class="navbar">
            <div class="container-fluid mt-3">
                <form class="d-flex" action= '/search' method="post">
                    <input class="form-control shadow-none me-2" name="mrn" type="text" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success mx-3" type="submit">Search</button>
                </form>
            </div>
        </nav>
    </div>
    

    {{!-- <div class="container mt-5"> --}}
        <table class="table  table-striped table-bordered">
            <thead>
              <tr>
                <th scope="col">Message Type</th>
                <th scope="col">Full Name</th>
                <th scope="col">Date of visit</th>
              </tr>
            </thead>
            <tbody>
                  {{#each result}}
              <tr>
                <td>{{messageType}}</td>
                <td>{{fullName}}</td>
                <td> {{Date}}</td
              </tr>
              {{else}}
          <b><i><p style="color: red ; text-align: center; padding: 10px;">Such client is not found in the system! </p></i></b>
          {{/each}} 
            </tbody>
        </table>
    {{!-- </div> --}}
</div>
{{> footer}}
{{> copy}} 
 </div>
</div>
